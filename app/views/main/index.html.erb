<html>
  <head>
    <style>
      .out
      {
        width : 60%;
        margin : 3%;
        height : 400px;
      }
      .in_left
      {
        position : relative;
        width : 20%;
        float : left;
      }
      .in_right
      {
        position : relative;
        width : 60%;
        float : left;
      }
      img
      {
        width : auto;
        height : 200px;
        margin-left:40px;
      }
      h1
      {
        text-align : left;
        font-size : 30px;
      }
      h2
      {
        text-align : left;
        font-size : 14px;
      }
      p
      {
        width : 50%;
        margin-left : 23%;
        padding : 5px;
        color : #444444;
        background-color : #dddddd;
        font-size : 14px;
        vertical-align : middle;
        border-radius : 4px;
        text-align : center
      }
      a{
        color : #444444;
        text-decoration:none !important;
      }
    </style>
  </head>
  <body>
    <div style="width : 100%">
    <% @mains.each do |a| %>
      <div class = "out">
        <div class = "in_left">
          <img src = <%= a.poster %> >
          <p> 
            <%= link_to "자세히 보기", a.link %>
          </p>
        </div>
        <div class = "in_right">
          <h1> 제목 : 
            <%= a.title %>
          </h1>
          <h2> 상세 : 
            <%= a.description %>
          </h2>
        </div>
      </div>
    <% end %>
  </div>
  </body>
</html>
